{
  "name": "neemee-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for Neemee personal knowledge management system",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "neemee-mcp-server": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "prepublishOnly": "npm run build",
    "test": "node test/json-rpc-validation.js",
    "test:mock-api": "node test/mock-api-server.js",
    "test:manual": "npm run build && node test/manual-test.js",
    "test:integration": "npm run build && node test/integration-test.js",
    "test:local": "npm run build && NEEMEE_API_BASE_URL=http://localhost:3001 NEEMEE_API_KEY=test-key-for-local-testing node dist/server.js",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags", 
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "neemee",
    "notes",
    "knowledge-management"
  ],
  "author": "Paul Bonneville <paul@paulbonneville.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Paul-Bonneville-Labs/neemee-mcp-server.git"
  },
  "homepage": "https://github.com/Paul-Bonneville-Labs/neemee-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/Paul-Bonneville-Labs/neemee-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}